<% if @book.errors.any? %>
     <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
           <% end %>
        </ul>
     </div>
 <% end %>
<h2>Editing book</h2>

<%= form_for(@book) do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update book' %>
<% end %>

<%= link_to "show", book_path(@book.id) %>
<%= link_to "back", books_path %>